{% extends "layout.html.twig" %}

{% block main %}

<article class="container-fluid row">
    <div class="col-4">
        <img class="img-fluid" src="{{ product.picture }}">
    </div>
    <div class="col-8">
        <h1>{{ product.name }}</h1>
        <p class="badge text-bg-info">{{ product.price|format_currency('EUR') }} HT</p>
        <p>{{ product.description }}</p>
        <p><a href="#" class="btn btn-dark">Ajouter au panier</a></p>
    </div>  
</article>

{% endblock %}